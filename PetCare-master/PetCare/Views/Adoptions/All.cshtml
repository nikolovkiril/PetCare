@model List<PetDetailsServiceModel>

@{
    ViewData["Title"] = "Adoptions";
}


@if (!Model.Any())
{
    <div class="text-center">
        <h2 class="display-4" font-weight: bold;>Welcome</h2>
        <p class="lead">There is no available pets for adoption at this moment!</p>
        <hr class="my-4">
        <p class="lead">
        </p>
    </div>
}
else
{
    <h2 class="text-center">Pets for Adoption</h2>
    <hr class="my-4">

    <div class="row  text-center">
        @foreach (var pet in Model)
        {

            <div class="card text-center responsive col-md-6 col-xl-4">
                <div class="card-header font-weight-bold" style="background-color: #dcdcdc">
                    @pet.Name
                </div>
                <br />
                <img class="card-img-top" src="@pet.Image">
                <div class="card-body">
                    <p class="card-text">@pet.Animal</p>
                    <a asp-controller="Adoptions" asp-action="Details" asp-route-petId="@pet.Id" class="btn btn-info">Info</a>
                </div>
            </div>
        }
    </div>
}
