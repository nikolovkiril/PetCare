@using Microsoft.AspNetCore.Identity
@using PetCare.Data.Models.User

@inject SignInManager<User> SignInManager

@model List<AllVetServicesFormModel>

@{
    ViewBag.Title = "All Services";
}

<body class="text-center">
    <h3>OUR LATEST SERVICES</h3>
    @if (SignInManager.IsSignedIn(User))
    {
        var userIsAdmin = User.IsInRole(WebConstants.AdministartorRoleName);

        if (userIsAdmin)
        {
            <a class="btn btn-danger" asp-area="" asp-controller="VetServices" asp-action="Add">Add new Service</a>
        }
    }
</body>
<hr class="my-4">

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < Model.Count; i++)
        {
            var vetService = Model[i];
            <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                <img class="d-block w-100" src="@vetService.ImgUrl" alt="@vetService.ServiceName">
                <div class="carousel-caption d-none d-md-block">
                    <p style="color: #000000">
                        We offer a variety of pets services that are just right for your pet
                    </p>
                    <h5><a class="btn btn-primary" asp-controller="VetServices" asp-action="Details" asp-route-vetServiceId="@vetService.Id">@vetService.ServiceName</a></h5>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<hr class="my-4">

<h4 class="text-center">SERVICE WE OFFER</h4>

<hr class="my-3">

<div class="row">
    @foreach (var vetService in Model)
    {
        <div class="card text-center col-md-6 col-xl-4">

            <div class="card-header-custom">
                @vetService.ServiceName.ToUpper()
            </div>
            <div class="card-body">
                <img class="card-img-top" src="@vetService.ImgUrl">
            </div>

            <p class="card-text-custom" id="truncateLongTexts">@vetService.Description</p>
            <a asp-controller="VetServices" asp-action="Details" asp-route-vetServiceId="@vetService.Id" class="btn btn-primary ">LEARN MORE</a>
        </div>
    }
</div>

