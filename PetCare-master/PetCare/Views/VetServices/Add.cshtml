@model AddVetService

@{
    ViewBag.Title = "Create Service";
}

<body class="masterForm">
    <div class="container font-weight-bold">
        <div class="row">
            <div class="col-sm-12 offset-lg-2 col-lg-6 offset-xl-3 col-xl-6">
                <h2 class="heading-margin text-center">@ViewBag.Title</h2>
                <form method="post">
                    <div class="form-group">
                        <label asp-for="ServiceName"></label>
                        <input asp-for="ServiceName" class="form-control" placeholder="Service Name">
                        <span asp-validation-for="ServiceName" class="small text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Description of Pet current condition"></textarea>
                        <span asp-validation-for="Description" class="small text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ImgUrl"></label>
                        <input asp-for="ImgUrl" class="form-control" placeholder="Image">
                        <br />
                        <span asp-validation-for="ImgUrl" class="small text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-success float-sm-right">Submit</button>
                </form>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}