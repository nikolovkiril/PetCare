@model AddPetFormModel

@{
    ViewData["Title"] = "Add your Pet";
}
<body class="masterForm">
    <div class="container font-weight-bold">
        <div class="row">
            <div class="col-sm-12 offset-lg-2 col-lg-6 offset-xl-3 col-xl-6">
                <h2 class="heading-margin text-center">Tell Us more about your <kbd><code>Pet</code></kbd></h2>
                <form method="post">
                    <div class="form-group">
                        <label asp-for="AnimalId"></label>
                        <select asp-for="AnimalId" placeholder="" class="custom-select" required 
                                oninvalid="this.setCustomValidity('Please select from the list')" oninput="setCustomValidity('')">
                            <option value="">Select Animal</option>
                            @foreach (var pet in Model.AnimalTypes)
                            {
                                <option value="@pet.Id">@pet.Type</option>
                            }
                        </select>
                        <span asp-validation-for="AnimalId" class="small text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Breed"></label>
                        <input asp-for="Breed" class="form-control" placeholder="If unknown Plese tipe N/A">
                        <span asp-validation-for="Breed" class="small text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" placeholder="Pet Name">
                        <span asp-validation-for="Name" class="small text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Genger"></label>
                        <br />
                        <select id="icon_prefix" asp-for="Genger" class="custom-select" required 
                                oninvalid="this.setCustomValidity('Please select from the list')" oninput="setCustomValidity('')">
                            <option value="">Select</option>
                            <option value="1">Male</option>
                            <option value="2">Female</option>
                        </select>
                        <span asp-validation-for="Genger" class="small text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BirthDate"></label>
                        <input asp-for="BirthDate" class="form-control">
                        <span asp-validation-for="BirthDate" class="small text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Description of Pet current condition"></textarea>
                        <span asp-validation-for="Description" class="small text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Image"></label>
                        <input asp-for="Image" class="form-control" placeholder="Image">
                        <br />
                        <span asp-validation-for="Image" class="small text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-success float-sm-right">Submit</button>
                </form>
            </div>
        </div>
    </div>

</body>
