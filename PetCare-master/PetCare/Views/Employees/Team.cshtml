@model List<DetailsEmployeeViewModel>

@{
    ViewData["Title"] = "Our Team";
}



<body class="text-center" >
    <h3 class="text-center">MEET OUR TEAM</h3>
    <a class="btn btn-danger heading-margin" asp-area="" asp-controller="Employees" asp-action="Add">Add new Employee</a>
</body>

<div class="row">
    @foreach (var employee in Model)
    {
        <figure  class="figure text-center responsive mr-auto" style="width: 16rem;">
            <a asp-controller="Employees" asp-action="Details" asp-route-employeeId="@employee.Id">
            <img class="card-img-top" src="@employee.Image">
            </a>
            <div class="card-body">
                <h5 class="card-title text-center">@employee.FirstName  @employee.LasttName</h5>
                <p class="card-text text-center">@employee.Position</p>
            </div>
        </figure>
    }
</div>
