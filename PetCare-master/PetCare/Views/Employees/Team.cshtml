@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

@model List<DetailsEmployeeViewModel>

@{
    ViewData["Title"] = "Our Team";
}



<body class="text-center">
    <h3 class="text-center">MEET OUR TEAM</h3>
    @if (SignInManager.IsSignedIn(User))
    {
        <a class="btn btn-danger " asp-area="" asp-controller="Employees" asp-action="Add">Add new Employee</a>
    }
</body>
<hr class="my-4">

<div class="row">
    @foreach (var employee in Model)
    {
        <figure class="figure text-center responsive mr-auto col-md-4">
            <a asp-controller="Employees" asp-action="Details" asp-route-employeeId="@employee.Id">
                <img class="card-img-top" src="@employee.Image">
            </a>
            <div class="card-body">
                <h5 class="card-title text-center">@employee.FirstName  @employee.LasttName</h5>
                <p class="card-text text-center">@employee.Position</p>
            </div>
        </figure>
    }
</div>
